<p id="notice"><%= notice %></p>

<h1>Notes</h1>
<%#= binding.pry %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @notes.each do |note| %>
      <tr>
        <td><%= note.title %></td>
        <td><%= note.body %></td>
        <td><%= note.user_id %></td>
        <td><%= link_to 'Show', user_note(note) %></td>
        <td><%#= link_to 'Edit', edit_user_note_path(@user, note) %></td>
        <td><%#= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

